<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="button_to_share" inherit_id="website_sale.products_item"
		customize_show="True" name="Compartir">
		<xpath expr="//div[hasclass('o_wsale_product_btn')]" position="inside">
			<div class="js_class d-inline" 
				t-attf-data-url="/shop/product/{{slug(product)}}"
				t-att-data-id="product.id">
				<button class="btn btn-primary" type="button" role="button">
					<i class="fa fa-share-alt" role="img"/>
				</button>
			</div>
		</xpath>	
	</template>

	<record id="view_product_share_count" model="ir.ui.view">
		<field name="name">view.product.form.inherit.share_count</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//form/sheet//div[@name='options']" position="inside">
				<div>
					<field name="share_count" widget="share_count_widget"/>
				</div>
			</xpath>	
		</field>
	</record>

</odoo>